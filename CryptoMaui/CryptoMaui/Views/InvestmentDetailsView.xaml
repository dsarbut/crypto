<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="CryptoMaui.Views.InvestmentDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:CryptoMaui.ViewModels"
    x:DataType="viewModels:InvestementViewModel">
    <VerticalStackLayout>
        <Label Text="{Binding Date, StringFormat='{0:MMMM} {0:yyyy}'}" VerticalOptions="Center" />

        <Label Text="{Binding InvestedAmmount, StringFormat='{0} $'}" VerticalOptions="Center" />

        <Label VerticalOptions="Center" VerticalTextAlignment="Center">
            <Label.Text>
                <MultiBinding StringFormat="{}{0} ({1})">
                    <Binding Path="CoinName" />
                    <Binding Path="CoinAmmount" />
                </MultiBinding>
            </Label.Text>
        </Label>
    </VerticalStackLayout>
</ContentView>
