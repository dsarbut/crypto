<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CryptoMaui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:CryptoMaui.ViewModels"
    x:DataType="viewModels:LoginViewModel"
    Background="{x:StaticResource Primary}"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Margin="16"
            HorizontalOptions="Fill"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="Welcome" />

            <VerticalStackLayout Spacing="0">
                <Entry
                    Margin="0,10"
                    HeightRequest="50"
                    Placeholder="Username"
                    PlaceholderColor="{x:StaticResource Gray500}"
                    Text="{Binding Username}"
                    WidthRequest="200" />

                <Entry
                    Margin="0,10"
                    HeightRequest="50"
                    IsPassword="True"
                    Placeholder="Password"
                    PlaceholderColor="{x:StaticResource Gray500}"
                    Text="{Binding Password}"
                    WidthRequest="200" />
            </VerticalStackLayout>


            <VerticalStackLayout Spacing="10">
                <Button
                    Command="{Binding LogInCommand}"
                    FontAttributes="Bold"
                    HeightRequest="40"
                    Text="Login"
                    WidthRequest="120" />
                <Entry
                    BackgroundColor="{x:StaticResource Primary}"
                    FontSize="12"
                    HorizontalOptions="Center"
                    Placeholder="Backend Url"
                    PlaceholderColor="{x:StaticResource Gray400}"
                    Text="{Binding BackendUrl}"
                    TextColor="{x:StaticResource Gray400}" />
            </VerticalStackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
